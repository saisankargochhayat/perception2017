            <section class="perception__sponsors">
            </section>
            <section class="perception__contact-us">
                <h2 class="section-heading">Find us here</h2>
                <p class="section-subhead"></p>
                <div class="box map-container">
                    <iframe class="map-embed" src="//www.google.com/maps/embed/v1/place?q=College%20of%20Engineering%20and%20Technology,%20Bhubaneswar&zoom=17&key=AIzaSyB4rXPkz--uY4KYLEWPiuIl5PdueEyPNbs">
                    </iframe>
                </div>
            </section>
            {# % include 'partials/footer.partial.html.twig' % #}
        </main>
        <footer id="footer" class="perception-footer">
            <ul class="footer__row footer__social-links">
                <li>
                    <a class="twitter" href="https://twitter.com"></a>
                </li>
                <li>
                    <a class="facebook" href="https://www.facebook.com/cet.bbsr.perception"></a>
