{% extends '::base.html.twig' %}

{% block title %}{% trans %}user.password.reset.form.title{% endtrans %}{% endblock %}

{% block body %}
    <section id="login_bg">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                    <div id="login">
                        {{ form_start(form) }}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('request_password_reset') }}"/>
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary">
                            {% trans %}user.password.reset.form.submit_action{% endtrans %}
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section> <!-- End login -->
{% endblock %}


