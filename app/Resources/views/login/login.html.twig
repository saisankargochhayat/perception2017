{% extends "::base.html.twig" %}

{% block title %}Login - LectureNotes.in{% endblock %}

{% block body %}
<section id="login_bg">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                {% if error %}
                    <div class="alert alert-warning">
                        {{ error.messageKey|trans(error.messageData,'security') }}
                    </div>
                {% endif %}
                <div id="login">
                    <p class="text-center">
                        <img src="{{ asset('assets/img/login_logo.png') }}" alt="LectureNotes.in Logo">
                    </p>
                    <hr>
    {% include "UserBundle:Login:login.fragment.html.twig" %}
                </div>
            </div>
        </div>
    </div>
</section> <!-- End login -->
{% endblock %}
