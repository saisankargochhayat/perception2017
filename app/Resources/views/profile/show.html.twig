{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profile</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ profile.avatar }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ profile.gender }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ profile.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ profile.address }}</td>
            </tr>
            <tr>
                <th>Institute</th>
                <td>{{ profile.institute }}</td>
            </tr>
            <tr>
                <th>Stream</th>
                <td>{{ profile.stream }}</td>
            </tr>
            <tr>
                <th>Specialization</th>
                <td>{{ profile.specialization }}</td>
            </tr>
            <tr>
                <th>Yearofstudy</th>
                <td>{{ profile.yearOfStudy }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('profile_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('profile_edit', { 'id': profile.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
